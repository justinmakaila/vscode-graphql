{
  "$schema":
    "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "GraphQL",
  "patterns": [
    {
      "include": "#comment"
    },
    {
      "include": "#type-declaration"
    },
    {
      "include": "#enum-declaration"
    },
    {
      "include": "#operation"
    },
    {
      "include": "#fragment"
    },
    {
      "include": "#selection-set"
    },
    {
      "include": "#variable-declarations"
    },
    {
      "include": "#type-condition"
    }
  ],
  "repository": {
    "comment": {
      "patterns": [
        {
          "name": "comment.line.number-sign.graphql",
          "match": "#.*$"
        },
        {
          "name": "comment.block.double-quote.graphql",
          "begin": "\"\"\"",
          "end": "\"\"\""
        }
      ]
    },
    "string": {
      "name": "string.quoted.double",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "include": "#escapedCharacter"
        }
      ]
    },
    "escapedCharacter": {
      "name": "constant.character.escape",
      "match": "\\\\(u[0-9A-Fa-f]{4}|[\"\\\\/bfnrt])"
    },
    "number": {
      "name": "constant.numeric",
      "match": "(\\-?)\\d+\\.?\\d*[eE]?[\\+\\-]?\\d*",
      "captures": {
        "1": {
          "name": "keyword.operator"
        }
      }
    },
    "boolean": {
      "name": "constant.language.boolean",
      "match": "(true|false)"
    },
    "null": {
      "name": "constant.language.null",
      "match": "null"
    },
    "enum": {
      "name": "support.constant.enum",
      "match": "[_A-Za-z][_0-9A-Za-z]*"
    },
    "directive": {
      "name": "meta.directive.graphql",
      "match": "(@)\\s*([_A-Za-z][_0-9A-Za-z]*)",
      "captures": {
        "1": {
          "name": "entity.name.function"
        },
        "2": {
          "name": "entity.name.function"
        }
      }
    },
    "enum-declaration": {
      "name": "meta.enum-declaration.graphql",
      "begin": "(enum)\\s+([_A-Za-z][_0-9A-Za-z]+)\\s+\\{",
      "end": "\\}",
      "beginCaptures": {
        "1": {
          "name": "storage.type"
        },
        "2": {
          "name": "entity.name.type"
        }
      },
      "patterns": [
        {
          "name": "enum"
        }
      ]
    },
    "type-declaration": {
      "name": "meta.type-declaration.graphql",
      "begin":
        "(type|interface)\\s+([_A-Za-z][_0-9A-Za-z]+)\\s+((@)\\s*([_A-Za-z][_0-9A-Za-z]*))?\\s*\\{",
      "end": "\\}",
      "beginCaptures": {
        "1": {
          "name": "storage.type"
        },
        "2": {
          "name": "entity.name.type"
        },
        "4": {
          "name": "entity.name.function"
        },
        "5": {
          "name": "entity.name.function"
        }
      },
      "patterns": [
        {
          "include": "#comment"
        },
        {
          "include": "#directive"
        },
        {
          "include": "#arguments"
        },
        {
          "include": "#type-field"
        },
        {
          "include": "#variable-type"
        },
        {
          "include": "#variable-array"
        },
        {
          "include": "#variable-bang"
        }
      ]
    },
    "type-field": {
      "name": "entity.section",
      "match": "[_A-Za-z][_0-9A-Za-z]*(\\s*:)",
      "captures": {
        "1": {
          "name": "keyword.operator"
        }
      }
    },
    "operation": {
      "name": "meta.operation.graphql",
      "match": "(query|mutation|subscription)\\s*([_A-Za-z][_0-9A-Za-z]*)",
      "captures": {
        "1": {
          "name": "storage.type"
        },
        "2": {
          "name": "entity.name.type"
        }
      }
    },
    "fragment": {
      "name": "meta.fragment.graphql",
      "match": "(fragment)\\s*([_A-Za-z][_0-9A-Za-z]*)",
      "captures": {
        "1": {
          "name": "storage.type"
        },
        "2": {
          "name": "entity.name.type"
        }
      }
    },
    "fragment-spread": {
      "name": "meta.fragment-spread.graphql",
      "match": "(\\.\\.\\.)\\s*(?!on)([_A-Za-z][_0-9A-Za-z]+)?",
      "captures": {
        "1": {
          "name": "keyword.operator"
        },
        "2": {
          "name": "entity.name.type"
        }
      }
    },
    "type-condition": {
      "name": "meta.type-condition.graphql",
      "match": "(on)\\s+([_A-Za-z][_0-9A-Za-z]*)",
      "captures": {
        "1": {
          "name": "keyword.operator"
        },
        "2": {
          "name": "entity.name.type"
        }
      }
    },
    "variable-declarations": {
      "name": "meta.variable-declarations",
      "begin": "\\(",
      "end": "\\)",
      "patterns": [
        {
          "include": "#variable-declaration"
        },
        {
          "include": "#variable-type"
        },
        {
          "include": "#variable-array"
        },
        {
          "include": "#variable-bang"
        },
        {
          "include": "#variable-default"
        },
        {
          "include": "#value"
        },
        {
          "include": "#comment"
        }
      ]
    },
    "variable-declaration": {
      "name": "variable.parameter",
      "match": "\\$[_A-Za-z][_0-9A-Za-z]*(\\s*:)",
      "captures": {
        "1": {
          "name": "keyword.operator"
        }
      }
    },
    "variable-name": {
      "name": "variable.parameter",
      "match": "\\$[_A-Za-z][_0-9A-Za-z]*"
    },
    "variable-type": {
      "name": "meta.variable-type.graphql",
      "match": "([_A-Za-z][_0-9A-Za-z]*)",
      "captures": {
        "1": {
          "name": "entity.name.type"
        }
      }
    },
    "variable-array": {
      "name": "meta.variable-array.graphql",
      "begin": "\\[",
      "end": "\\]",
      "patterns": [
        {
          "include": "#variable-type"
        },
        {
          "include": "#variable-bang"
        }
      ]
    },
    "variable-bang": {
      "name": "keyword.operator",
      "match": "\\!"
    },
    "variable-default": {
      "name": "keyword.operator",
      "match": "="
    },
    "selection-set": {
      "name": "meta.selection-set.graphql",
      "begin": "\\{",
      "end": "\\}",
      "patterns": [
        {
          "include": "#comment"
        },
        {
          "include": "#selection-set"
        },
        {
          "include": "#fragment-spread"
        },
        {
          "include": "#type-condition"
        },
        {
          "include": "#directive"
        },
        {
          "include": "#arguments"
        },
        {
          "include": "#alias"
        }
      ]
    },
    "arguments": {
      "name": "meta.arguments",
      "begin": "\\(",
      "end": "\\)",
      "patterns": [
        {
          "include": "#value"
        },
        {
          "include": "#comment"
        }
      ]
    },
    "value": {
      "name": "meta.value.graphql",
      "patterns": [
        {
          "include": "#variable-name"
        },
        {
          "include": "#argument"
        },
        {
          "include": "#string"
        },
        {
          "include": "#number"
        },
        {
          "include": "#boolean"
        },
        {
          "include": "#null"
        },
        {
          "include": "#enum"
        }
      ]
    },
    "argument": {
      "name": "variable.parameter",
      "match": "[_A-Za-z][_0-9A-Za-z]*(\\s*:)",
      "captures": {
        "1": {
          "name": "keyword.operator"
        }
      }
    },
    "alias": {
      "name": "entity.section",
      "match": "[_A-Za-z][_0-9A-Za-z]*(\\s*:)",
      "captures": {
        "1": {
          "name": "keyword.operator"
        }
      }
    }
  },
  "scopeName": "source.graphql"
}
